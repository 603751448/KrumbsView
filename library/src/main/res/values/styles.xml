<resources>

    <style name="KrumbsStyle" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:minWidth">10dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="KrumbsStyle.CurrentItem" parent="KrumbsStyle">
        <item name="android:background">@null</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingStart">15dp</item>
    </style>

    <style name="KrumbsStyle.PreviousItem" parent="KrumbsStyle">
        <item name="android:textColor">@color/transparent_white</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?selectableItemBackground</item>
    </style>

</resources>
